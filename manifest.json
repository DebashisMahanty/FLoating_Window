{
  "manifest_version": 3,
  "name": "AI Interview Copilot",
  "version": "1.0.0",
  "description": "Floating interview copilot with live transcription and AI answer suggestions.",
  "permissions": ["microphone", "activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "AI Interview Copilot",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
